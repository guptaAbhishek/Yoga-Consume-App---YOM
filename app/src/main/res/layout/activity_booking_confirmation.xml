<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/booking_confirm_outer_layout"
    android:onClick="onClick"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context="com.example.siddarthshikhar.yogaapp.BookingConfirmation">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></FrameLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Gold"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:id="@+id/booking_confirmation_label1"
                android:textColor="@color/action_bar_color"
                android:layout_weight="3"
                android:text="Thanks for the booking!\nOur Executives will get in touch with you shortly."
                android:textSize="21sp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"></FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:id="@+id/booking_confirmation_label2"
                android:textColor="@color/action_bar_color"
                android:text="Please feel free to contact us for any queries."
                android:textSize="21sp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:id="@+id/booking_confirmation_label3"
                android:textSize="21sp"
                android:clickable="true"
                android:onClick="onClick"
                android:background="@color/action_bar_color"
                android:textColor="@color/Gold"
                android:text="\nEmail ID: admin@yom.co.in\n\nPhone No: +91-8285556855\n"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></FrameLayout>
</LinearLayout>
