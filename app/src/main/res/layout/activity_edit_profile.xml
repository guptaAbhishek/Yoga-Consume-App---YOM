<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.siddarthshikhar.yogaapp.EditProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"></FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/Black"
                android:textSize="21sp"
                android:id="@+id/personal_info_label"
                android:text="PERSONAL INFORMATION"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Full Name"
                    android:focusableInTouchMode="true"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Full Name"
                    android:id="@+id/edit_profile_name"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter DOB"
                    app:met_baseColor="@color/Black"
                    android:focusableInTouchMode="true"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="DOB"
                    android:id="@+id/edit_profile_age"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:hint="Enter Gender"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Gender"
                    android:id="@+id/edit_profile_gender"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:hint="Enter Height"
                    android:focusableInTouchMode="true"
                    android:inputType="numberSigned"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Height"
                    android:id="@+id/edit_profile_height"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:text="cms"
                    android:gravity="center"
                    android:textColor="@color/action_bar_color"
                    android:id="@+id/cm_label"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:hint="Enter Weight"
                    android:inputType="numberSigned"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Weight"
                    android:id="@+id/edit_profile_weight"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:text="kgs"
                    android:gravity="center"
                    android:textColor="@color/action_bar_color"
                    android:id="@+id/kgs_label"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"></FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="21sp"
                android:textColor="@color/Black"
                android:id="@+id/contact_info_label"
                android:text="CONTACT INFORMATION"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone No"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:textSize="18sp"
                    app:met_minCharacters="10"
                    android:focusableInTouchMode="true"
                    app:met_maxCharacters="10"
                    android:inputType="numberSigned"
                    app:met_iconLeft="@drawable/ic_call_black_24dp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Phone No"
                    android:id="@+id/edit_profile_phone"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="0.2"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email ID"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:focusableInTouchMode="true"
                    android:textSize="18sp"
                    app:met_iconLeft="@drawable/ic_email_black_24dp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Email ID"
                    android:id="@+id/edit_profile_email"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Address"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:focusableInTouchMode="true"
                    android:textSize="18sp"
                    app:met_iconLeft="@drawable/ic_location_on_black_24dp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Address"
                    android:id="@+id/edit_profile_address"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1.2"></FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1.5">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="SAVE"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:gravity="center"
                        android:background="@color/Gold"
                        android:textColor="@color/action_bar_color"
                        android:layout_gravity="center"
                        android:onClick="onClick"
                        android:id="@+id/edit_profile_save"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="DISCARD"
                        android:gravity="center"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:textColor="@color/action_bar_color"
                        android:background="@color/Gold"
                        android:layout_gravity="center"
                        android:onClick="onClick"
                        android:id="@+id/edit_profile_discard"/>
                </FrameLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1.2"></FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
