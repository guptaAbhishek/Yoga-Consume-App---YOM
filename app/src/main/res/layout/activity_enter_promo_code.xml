<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.siddarthshikhar.yogaapp.EnterPromoCodeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:hint="Enter Promo Code(Optional)"
                    app:met_baseColor="@color/Black"
                    app:met_primaryColor="@color/action_bar_color"
                    app:met_textColorHint="@color/action_bar_color"
                    app:met_floatingLabel="highlight"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:met_floatingLabelText="Promo Code"
                    android:id="@+id/enter_promo_code"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="VERIFY"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="@color/action_bar_color"
                    android:gravity="center"
                    android:background="@color/Gold"
                    android:onClick="onClick"
                    android:layout_gravity="center"
                    android:id="@+id/verify_promo_code"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textColor="@color/Black"
                android:gravity="center"
                android:id="@+id/total_cost_label"
                android:textSize="21sp"
                android:text="Total Cost"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textColor="@color/Black"
                android:gravity="center"
                android:textSize="21sp"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:textSize="21sp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/Black"
                android:background="@drawable/rectangleline"
                android:gravity="center"
                android:id="@+id/total_cost"
                />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PROCEED"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/action_bar_color"
            android:gravity="center"
            android:background="@color/Gold"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:id="@+id/proceed_to_checkout"/>
    </FrameLayout>
</LinearLayout>
