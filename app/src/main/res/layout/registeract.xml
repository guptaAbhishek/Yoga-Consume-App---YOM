<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="565dp"
            android:orientation="vertical">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Full Name"
                app:met_baseColor="@color/Black"
                app:met_primaryColor="@color/action_bar_color"
                app:met_textColorHint="@color/action_bar_color"
                app:met_floatingLabel="highlight"
                android:textSize="18sp"
                app:met_floatingLabelTextSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:met_floatingLabelText="Full Name"
                android:id="@+id/register_fullname"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email ID"
                app:met_baseColor="@color/Black"
                app:met_primaryColor="@color/action_bar_color"
                app:met_textColorHint="@color/action_bar_color"
                app:met_floatingLabel="highlight"
                android:textSize="18sp"
                app:met_iconLeft="@drawable/ic_email_black_24dp"
                app:met_floatingLabelTextSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:met_floatingLabelText="Email ID"
                android:id="@+id/register_emailid"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No"
                app:met_baseColor="@color/Black"
                app:met_primaryColor="@color/action_bar_color"
                app:met_textColorHint="@color/action_bar_color"
                app:met_floatingLabel="highlight"
                android:textSize="18sp"
                app:met_minCharacters="10"
                app:met_maxCharacters="10"
                android:inputType="numberSigned"
                app:met_iconLeft="@drawable/ic_call_black_24dp"
                app:met_floatingLabelTextSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:met_floatingLabelText="Phone No"
                android:id="@+id/register_phoneno"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                app:met_baseColor="@color/Black"
                app:met_primaryColor="@color/action_bar_color"
                app:met_textColorHint="@color/action_bar_color"
                app:met_floatingLabel="highlight"
                android:textSize="18sp"
                app:met_minCharacters="5"
                app:met_maxCharacters="15"
                app:met_floatingLabelTextSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:met_floatingLabelText="Password"
                android:inputType="textPassword"
                android:id="@+id/register_password"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Retype Password"
                app:met_baseColor="@color/Black"
                app:met_primaryColor="@color/action_bar_color"
                app:met_textColorHint="@color/action_bar_color"
                app:met_floatingLabel="highlight"
                android:textSize="18sp"
                app:met_minCharacters="5"
                app:met_maxCharacters="15"
                android:inputType="textPassword"
                app:met_floatingLabelTextSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:met_floatingLabelText="Password Again"
                android:id="@+id/register_passwordagain"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="80dp"></FrameLayout>
            <Button
                android:id="@+id/register_done"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:onClick="onClick"
                android:text="SIGN UP"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:background="@color/Gold"
                android:textColor="@color/action_bar_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>